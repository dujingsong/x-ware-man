<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.imadc.application.xwareman.basic.rbac.userRole.mapper.UserRoleMapper">

    <select id="getUserRoleInfo" resultType="cn.imadc.application.xwareman.basic.rbac.role.entity.Role">
        SELECT t.type, t.id
        FROM role t
                 LEFT JOIN user_role ur ON ur.role_id = t.id
        WHERE t.del_flag = 0
          AND ur.del_flag = 0
          AND ur.user_id = #{userId}
    </select>
</mapper>

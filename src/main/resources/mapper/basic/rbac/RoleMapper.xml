<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.imadc.application.xwareman.basic.rbac.role.mapper.RoleMapper">

    <select id="getUserRole" resultType="cn.imadc.application.xwareman.basic.rbac.role.entity.Role">
        SELECT r.*
        FROM role r LEFT JOIN user_role ur ON r.id = ur.role_id
        WHERE r.del_flag = 0 AND ur.del_flag = 0 AND ur.user_id = #{userId}
    </select>
</mapper>
